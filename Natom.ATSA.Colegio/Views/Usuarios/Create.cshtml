@using Natom.ATSA.Colegio.Models
@model Usuario

@{
    ViewBag.Title = "Nuevo";
}

<h2>Nuevo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Usuario</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-7">
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @type = "text", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @type = "text", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "ejemplo@establecimiento.com", @type = "email", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div style="height:auto; border: 1px solid #ccc; border-radius: 4px; padding:15px;">

                @Html.CheckBoxFor(m => m.PuedeCargarExcelFacturas)
                @Html.LabelFor(m => m.PuedeCargarExcelFacturas)
                <br />
                @Html.CheckBoxFor(m => m.PuedeEliminarExcelFacturas)
                @Html.LabelFor(m => m.PuedeEliminarExcelFacturas)
                <br />
                @Html.CheckBoxFor(m => m.PuedeAuditarConsiliacion)
                @Html.LabelFor(m => m.PuedeAuditarConsiliacion)
                <br />
                @Html.CheckBoxFor(m => m.PuedeAuditarFactura)
                @Html.LabelFor(m => m.PuedeAuditarFactura)
                <br />
                @Html.CheckBoxFor(m => m.PuedeDescargarExcelAuditoria)
                @Html.LabelFor(m => m.PuedeDescargarExcelAuditoria)
                <br />
                @Html.CheckBoxFor(m => m.PuedeCargarExcelAuditoria)
                @Html.LabelFor(m => m.PuedeCargarExcelAuditoria)

                <br />
                @Html.CheckBoxFor(m => m.PuedeEliminarExcelAuditoria)
                @Html.LabelFor(m => m.PuedeEliminarExcelAuditoria)
                <br />

                @Html.CheckBoxFor(m => m.PuedeVerAuditorias)
                @Html.LabelFor(m => m.PuedeVerAuditorias)
            </div>
        </div>
    </div>
    

    <div>
        <div class="col-md-offset-2 col-md-8">
            <input type="button" class="btn btn-danger" value="Cancelar" onclick="location.href='/colegiotest/usuarios'" />
            &nbsp;
            <input type="button" value="Crear" class="btn btn-success" onclick="Grabar()" />
        </div>
    </div>
</div>
}

<script src="~/Resources/js/usuarios/create.min.js"></script>

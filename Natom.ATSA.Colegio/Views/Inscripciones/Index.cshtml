@using Natom.ATSA.Colegio.Models

@{
    ViewBag.Title = "Inscripciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Hidden("FiltroEstado")
<style type="text/css">
    #modalRendicionDetalle .modal-dialog {
        width: 900px !important;
    }
</style>
<div class="row" style="display:inline-block;width:100%">
    <div class="col-md-4">
        <h2>Inscripciones</h2>
    </div>
    <div class="col-xs-3">
        <div class="form-group">
            <label>Carrera / Curso</label>
            <select id="FiltroCarreraCurso" class="form-control">
                <option>Ver todas</option>
                @foreach (var t in ViewBag.CarrerasCursos as List<CarreraCurso>)
                {
                    <option value="@t.CarreraCursoId">@t.Titulo</option>
                }
            </select>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="form-group">
            <label>Ciclo lectivo</label>
            <select id="FiltroCicloLectivo" class="form-control">
                <option>Ver todos</option>
                <option value="1">Cursando 1er año</option>
                <option value="2">Cursando 2do año</option>
                <option value="3">Cursando 3er año</option>
                @*<option value="4">Cursando 4to año</option>
                <option value="5">Cursando 5to año</option>*@
                <option value="0">COMPLETADO</option>
            </select>
        </div>
    </div>
    <div class="col-md-2">
        <a class="btn btn-success pull-right" style="margin-right:-30px;margin-top:12px;" id="NuevaInscripcion">Nueva</a>
    </div>
</div>
<br />
<table width="100%" id="tbl" class="table table-condensed">
    <thead>
        <tr>
            <th>
                Afiliado
            </th>
            <th>
                Apellido y Nombre
            </th>
            <th>
                DNI
            </th>
            <th>
                Carrera / Curso
            </th>
            <th>
                Ciclo
            </th>
            <th></th>
        </tr>
    </thead>
</table>
<div id="divModal">
</div>
<div id="divModalBaja">
</div>
<script src="~/Resources/js/inscripciones/Index.js"></script>

@model Natom.ATSA.Colegio.Models.Requisito

<script src="~/Resources/components/bootstrap-3-typeahead/bootstrap3-typeahead.min.js"></script>
<div id="modalRequisitos" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                @if (Model.RequisitoId > 0)
                {
                    <h4 class="modal-title" style="color:black!important">Editar requisito</h4>
                }
                else
                {
                    <h4 class="modal-title" style="color:black!important">Nuevo requisito</h4>
                }
            </div>
            @using (Html.BeginForm("Crear_EditarRequisito", "Requisitos", FormMethod.Post, new { @id = "FormRequisitos" }))
            {
                <input type="hidden" name="RequisitoId" id="RequisitoId" value="@Model.RequisitoId" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label>Nombre</label>
                                <input type="text" name="Descripcion" id="Descripcion" class="form-control" value="@Model.Descripcion" />
                                <span id="ErrorDescripcion" style="display:none;color:red;">Debe completar el campo.</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="float:left;">Cancelar</button>
                    <button type="submit" class="btn btn-success" id="btnCargar" style="float:right;">Grabar</button>
                </div>
            }
        </div>

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#FormRequisitos").on('submit', function () {
            var d = $("#Descripcion").val();
            if (d.length > 1) {
                $("#ErrorDescripcion").hide();
                return true;
            }
            else {
                $("#ErrorDescripcion").show();
                return false;
            }
        });
    });
</script>